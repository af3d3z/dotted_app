# ios/Podfile

platform :ios, '11.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Locate the Flutter SDK root
def flutter_root
  generated_xcconfig = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcconfig)
    abort "Generated.xcconfig not found at #{generated_xcconfig}. Run `flutter pub get` first."
  end

  # The Flutter tool directory is two levels up from this Podfile
  File.expand_path(File.join('..', '..', 'flutter'), __FILE__)
end

# Load Flutterâ€™s CocoaPods integration
require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  flutter_root
)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Integrate all Flutter plugins
  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
